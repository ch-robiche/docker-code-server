## custom Dockerfile for code-server that includes claude-code + gcloud + Vertex env
# syntax=docker/dockerfile:1

FROM ghcr.io/linuxserver/baseimage-ubuntu:noble

# set version label
ARG BUILD_DATE
ARG VERSION
ARG CODE_RELEASE
LABEL build_version="Linuxserver.io version:- ${VERSION} Build-date:- ${BUILD_DATE}"
LABEL maintainer="aptalca"

# environment settings
ARG DEBIAN_FRONTEND="noninteractive"
ENV HOME="/config"

# Claude / Vertex environment variables (persist inside container)
ENV CLAUDE_CODE_USE_VERTEX=1 \
    CLOUD_ML_REGION=us-east5 \
    ANTHROPIC_VERTEX_PROJECT_ID=oa-data-btdpexploration-np \
    DISABLE_PROMPT_CACHING=0

# Make npm global installs user-writable and on PATH (for auto-updates)
ENV NPM_CONFIG_PREFIX=/config/.npm-global \
    PATH=/config/.npm-global/bin:/app/code-server/bin:${PATH} \
    NPM_CONFIG_FUND=false \
    NPM_CONFIG_AUDIT=false

RUN \
  echo "**** install runtime dependencies ****" && \
  apt-get update && \
  apt-get install -y \
    ca-certificates \
    curl \
    gnupg \
    git \
    libatomic1 \
    nano \
    net-tools \
    sudo && \
  echo "**** install Google Cloud CLI (apt repo w/ keyring) ****" && \
  rm -f /etc/apt/sources.list.d/google-cloud-sdk.list && \
  mkdir -p /usr/share/keyrings && \
  curl -fsSL https://packages.cloud.google.com/apt/doc/apt-key.gpg \
    | gpg --dearmor -o /usr/share/keyrings/cloud.google.gpg && \
  echo 'deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main' \
    > /etc/apt/sources.list.d/google-cloud-sdk.list && \
  apt-get update && \
  apt-get install -y google-cloud-cli && \
  echo "**** install code-server ****" && \
  if [ -z ${CODE_RELEASE+x} ]; then \
    CODE_RELEASE=$(curl -sX GET https://api.github.com/repos/coder/code-server/releases/latest \
      | awk '/tag_name/{print $4;exit}' FS='[""]' | sed 's|^v||'); \
  fi && \
  mkdir -p /app/code-server && \
  ARCH=$(uname -m) && \
  if [ "$ARCH" = "x86_64" ]; then CODE_ARCH="amd64"; fi && \
  if [ "$ARCH" = "aarch64" ]; then CODE_ARCH="arm64"; fi && \
  curl -o /tmp/code-server.tar.gz -L \
    "https://github.com/coder/code-server/releases/download/v${CODE_RELEASE}/code-server-${CODE_RELEASE}-linux-${CODE_ARCH}.tar.gz" && \
  tar xf /tmp/code-server.tar.gz -C /app/code-server --strip-components=1 && \
  echo "**** install Node.js and npm ****" && \
  NODE_VERSION=22.14.0 && \
  ARCH=$(uname -m) && \
  if [ "$ARCH" = "aarch64" ]; then NODE_ARCH="arm64"; fi && \
  if [ "$ARCH" = "x86_64" ]; then NODE_ARCH="x64"; fi && \
  curl -fsSL "https://nodejs.org/dist/v${NODE_VERSION}/node-v${NODE_VERSION}-linux-${NODE_ARCH}.tar.gz" \
    | tar -xz -C /usr/local/ --strip-components=1 && \
  node -v && npm -v && \
  echo "**** prepare npm user-global prefix ****" && \
  mkdir -p /config/.npm-global && \
  chown -R abc:abc /config && \
  echo "**** upgrade npm (system) then install claude-code as user for auto-updates ****" && \
  npm install -g npm@latest && \
  su abc -s /bin/bash -c "npm config set prefix '/config/.npm-global' && npm -v && npm install -g @anthropic-ai/claude-code" && \
  printf "Linuxserver.io version: ${VERSION}\nBuild-date: ${BUILD_DATE}" > /build_version && \
  echo "**** clean up ****" && \
  apt-get clean && \
  rm -rf \
    /tmp/* \
    /var/lib/apt/lists/* \
    /var/tmp/*

# add local files
COPY /root /

# ports and volumes
EXPOSE 8443
